{% extends 'base.html.twig' %}
{% block header_title %}
	<a href="{{ path('task_list') }}" class="btn btn-purple mb-4">
		<i class="fas fa-left-long me-2"></i>Retour à la liste des tâches
	</a>
	<h1>{% block h1 %}{% endblock %}</h1>
{% endblock %}
{% block header_img %}{% endblock %}
{% block body %}
	{{ form_start(taskForm) }}
	{% if form_errors(taskForm) %}
		<div class="alert alert-danger">
			{{ form_errors(taskForm) }}
		</div>
	{% endif %}
	<div class="row">
		<div class="col-sm-6">
			{{ form_label(taskForm.title, "Titre") }}
			{{ form_widget(taskForm.title, {'attr': {'class': 'form-control', 'placeholder': "Saisissez un titre"}}) }}
		</div>
	</div>
	<div class="row mt-3">
		<div class="col-sm-6">
			{{ form_label(taskForm.content, "Description") }}
			{{ form_widget(taskForm.content, {'attr': {'class': 'form-control', 'placeholder': "Saisissez une description"}}) }}
		</div>
	</div>
    {% block extraFields %}{% endblock %}
	<button type="submit" id="submit-btn" class="btn btn-purple mt-4">
		<i class="fas fa-check me-2"></i>{% block button %}Valider{% endblock %}</button>
	{{ form_end(taskForm) }}
{% endblock %}
